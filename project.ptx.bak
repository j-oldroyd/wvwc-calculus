<?xml version="1.0" encoding="utf-8"?>
<!--
    This file, the project manifest, provides the overall configuration for
    your PreTeXt project. To edit the content of your document, open
    `source/main.ptx`. See
    https://pretextbook.org/doc/guide/html/processing-CLI.html#cli-project-manifest.
-->
<project ptx-version="2">
  <targets>
    <target 
      name="web" 
      format="html"
      source="wvwc-calculus.ptx"
      output-dir="html">
        <stringparams author.tools="yes"/>
      </target>
    <target 
      name="print" 
      format="pdf"
      source="wvwc-calculus.ptx"
      xsl="wvwc-calculus-latex.xsl"/>
    <target
      name="print-dyslexic"
      format="pdf"
      source="wvwc-calculus.ptx"
      xsl="wvwc-calculus-dyslexic-print.xsl"/>
    <target 
      name="print-latex" 
      format="latex"
      source="wvwc-calculus.ptx"/>
    <target
      name="epub"
      format="epub"
      source="wvwc-calculus.ptx"/>
    <target
      name="kindle"
      format="kindle"
      source="wvwc-calculus.ptx"/>
  </targets>
</project>
